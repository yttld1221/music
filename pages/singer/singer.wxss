/* pages/singer/singer.wxss */
.bg-con{
 display: flex;
 justify-content: center;
 flex-direction: column;
 align-items: center;
 position: fixed;
 top:0;
 width: 100%;
 height: 550rpx;
 z-index: 100;
}
.bg-con text{
  position: absolute;
  font-size: 70rpx;
  color: white;
   margin-top: 130rpx;
}
.bg-item{
  position: absolute;
  height: 250rpx;
  width: 35%;
  border-radius: 50%;
  margin-top: -80rpx;
 margin-bottom: 180rpx;
}
.bg{
  width: 100%;
  height: 100%;
  padding: 0;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
}

.music-list{
  width: 95%;
  margin: 0 auto;
  margin-top: 550rpx;
}
.music-list .list-item{
padding: 15rpx 0;
border-bottom: 2rpx solid gainsboro;
display: flex;
flex-direction: column;
}
.music-list .list-item text:nth-child(1){
  font-size: 30rpx;
}
.music-list .list-item text:nth-child(2){
  font-size: 27rpx;
  color: gray;
  padding: 10rpx 0;
}